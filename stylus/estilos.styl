 //menu
#NavStrip 
  position  relative
  display  block
  list-style-type  none
  margin 0
  padding 0
  background-color  azul
  
  
#NavStrip ul
  text-align center
  
#NavStrip li 
  display inline-block
  background-color azul
  border-radius
  width 15%
  list-style none 
  color white 
  font-size 150%
  
#NavStrip li a 
  display block 
  padding 15px 
  text-decoration none
  color white
  -webkit-transition 0.5s
  -moz-transition 0.5s
  -o-transition 0.5s
  -ms-transition 0.5s
  transition 0.5s
#NavStrip li a:hover 
  color #fff
  text-shadow -1px 1px 5px azul, 1px -1px 5px azul
  background-color rojo
#NavStrip ul li 
  padding 0px 

#NavStrip label 
  display none
#menu-toggle 
  display none
  
@media all and (max-width:700px) and (min-width:0px)
 #NavStrip 
   text-align right
 #NavStrip label 
   display  block
   height 50px
   width 50px
   line-height 50px
   text-align center
   color white
   font-size 150%
   background-color rojo
   cursor pointer
   
 #NavStrip #nav 
   display none

#menu-toggle:checked + #nav 
   display block
#NavStrip label:active #nav
   display none

animacion(parametro)
 -webkit-animation parametro
 -moz-animation parametro
 -o-animation parametro
 -ms-animation parametro
 animation parametro
// galeria de banner
@keyframes baner 
 0%  
   left 0% 
 20%  
   left 0% 
 25%  
   left -100% 
 45%  
   left -100% 
 50%  
   left -200% 
 70%  
   left -200% 
 75%  
   left -300% 
 90%  
   left -300% 
 100%  
   left -400% 

